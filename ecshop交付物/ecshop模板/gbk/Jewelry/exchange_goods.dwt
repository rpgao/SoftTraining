<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gbk" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable --><!-- TemplateBeginEditable name="head" --><!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
{* 包含脚本文件 *}
{insert_scripts files='common.js'}
<script type="text/javascript" src="js/action.js"></script>
</head>
<body>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
<div class="Area clearfix">
  <div class="PageLeft f_l">
  <!-- TemplateBeginEditable name="左边区域" -->
  <!-- #BeginLibraryItem "/library/category_tree.lbi" --><!-- #EndLibraryItem --> 
  <!-- #BeginLibraryItem "/library/goods_attrlinked.lbi" --><!-- #EndLibraryItem -->
  <!-- #BeginLibraryItem "/library/history.lbi" --><!-- #EndLibraryItem -->
  <!-- #BeginLibraryItem "/library/goods_article.lbi" --><!-- #EndLibraryItem -->
   <!-- TemplateEndEditable -->
 </div>
 <div class="PageRight f_r">
 <!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem -->
 <!-- #BeginLibraryItem "/library/search_form.lbi" --><!-- #EndLibraryItem -->
  
  <div class="GoodTit clearfix">
  <h1 class="f_l">{$goods.goods_style_name}</h1>
  <span class="f_r">
   {if $prev_good}
        <a href="{$prev_good.url}"><img alt="上一个商品" src="images/up.gif"  /></a>
        {/if}
        {if $next_good}
        <a href="{$next_good.url}"><img alt="下一个商品" src="images/down.gif" /></a>
        {/if}
  </span>
  </div>
  <div class="GoodsProperty">
  <ul class="clearfix">
   <li class="f_l" id="focuscont">  
    <!-- {foreach name=pic from=$pictures item=picture}-->
   <div class="focuscont" id="focuscont{$smarty.foreach.pic.iteration}"  style="display:none">
    <p><a href="gallery.php?id={$id}&amp;img={$picture.img_id}" target="_blank"><img src="{$picture.img_url}" /></a></p>
   </div>
   <!--{/foreach}-->     
  </li>
  <li class="f_l" id="focustab">
  <div>
    <div class="topcolor" onclick="myScroll('up');" id="aa"></div>    
       <ul class="clearfix" id="items" >     
       <!-- {foreach name=pic from=$pictures item=picture}-->
      <li><a href="#go" target="_blank" name="{$smarty.foreach.pic.iteration}"><img src="{$picture.img_url}" /></a></li>
      <!--{/foreach}-->      
       </ul>
      <div class="bottomcolor" onclick="myScroll('dow');" id="bb"></div>
   </div>  
  </li>
  <li class="f_r">
  <div class="GoodsTxt">    
    <form action="exchange.php?act=buy" method="post" name="ECS_FORMBUY" id="ECS_FORMBUY" >
   <ul>
        <!-- {if $cfg.show_goodssn} 显示商品货号-->
     <li>
        <span class="Acolor">{$lang.goods_sn}</span>{$goods.goods_sn}
    </li>
        <!-- {/if} -->
        <!-- {if $goods.goods_brand neq "" and $cfg.show_brand} 显示商品品牌-->
     <li>
        <span class="Acolor">{$lang.goods_brand}</span><a href="{$goods.goods_brand_url}" >{$goods.goods_brand}</a>
    </li>
        <!--{/if}-->
        <!-- {if $cfg.show_goodsweight} 商品重量-->
     <li>
        <span class="Acolor">{$lang.goods_weight}</span>{$goods.goods_weight}
    </li>
        <!-- {/if} -->
     <li>
        <span class="Acolor">{$lang.exchange_integral}</span><font class="PriceTwo">{$goods.exchange_integral}</font>
    </li>
        <!-- {* 开始循环所有可选属性 *} -->
        <!-- {foreach from=$specification item=spec key=spec_key} 循环规格开始 -->
        <li class="NoLine">
        {$spec.name}:
    </li>
        <!-- {if $cfg.goodsattr_style eq 1} 规格显示方式：单选按钮 -->
        <!-- {foreach from=$spec.values item=value key=key} -->
    <li class="Line">
        <label for="spec_value_{$value.id}">
        <input type="radio" name="spec_{$spec_key}" value="{$value.id}" id="spec_value_{$value.id}" {if $key eq 0}checked{/if} />
        {$value.label} 
    </label>    
        </li>
        <!-- {/foreach} -->
        <!-- {else} 规格显示方式：下拉列表 -->

        <select name="spec_{$spec_key}" class="TextInput">
          <!-- {foreach from=$spec.values item=value key=key} -->
          <option label="{$value.label}" value="{$value.id}">{$value.label} </option>
          <!-- {/foreach} -->
        </select>    
        <!-- {/if} 规格显示方式 -->
   
        <!-- {/foreach} 循环规格结束 -->    
        <!-- {* 结束循环可选属性 *} -->
        <li class="NoLine">
    <input type="hidden" name="goods_id" value="{$goods.goods_id}" />    
        <input type="submit" value="{$lang.exchange_goods}" class="bnt_number4"/>
       </li>
    </ul>
     </form>
  </div>
  </li>
  </ul>
  <script>
  initAutoFocus();
  var numLi = $("items").getElementsByTagName("li").length;
  if(numLi<5){
  $("aa").className="top";
  $("bb").className="bottom"
  }
  </script>
  </div>  
    <div class="infotit clearfix" id="com_b">
    <h2>{$lang.feed_goods_desc}</h2>
    <h2 class="h2bg">{$lang.goods_attr}</h2>
    <h2 class="h2bg">{$lang.goods_tag}</h2>
   </div>
   <div class="tagcontent" id="com_v"></div>
    <div id="com_h">
     <blockquote>
        {$goods.goods_desc}
       </blockquote>
    <blockquote>
        <table width="100%" border="0" cellpadding="5" cellspacing="1" bgcolor="#dddddd">
        <!-- {foreach from=$properties item=property_group key=key} -->
        <tr>
          <th colspan="2" bgcolor="#FFFFFF">{$key|escape}</th>
        </tr>
        <!-- {foreach from=$property_group item=property} -->
        <tr>
          <td bgcolor="#FFFFFF" align="left" width="30%" class="f1">[{$property.name|escape:html}]</td>
          <td bgcolor="#FFFFFF" align="left" width="70%">{$property.value|escape:html}</td>
        </tr>
        <!-- {/foreach}-->
        <!-- {/foreach}-->
       </table>
       </blockquote>
    <blockquote>
        <!-- #BeginLibraryItem "/library/goods_tags.lbi" --><!-- #EndLibraryItem -->
       </blockquote>
   </div>
   <script type="text/javascript">reg("com");</script>
  
 <!-- TemplateBeginEditable name="右边区域" -->
 <!-- #BeginLibraryItem "/library/comments.lbi" --><!-- #EndLibraryItem -->
  <!-- TemplateEndEditable -->
 </div>
</div>
<!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
</body>
<script type="text/javascript">
<!-- {literal} -->
onload = function()
{
  fixpng();
}
<!-- {/literal} -->
</script>
</html>
