<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gbk" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable -->
<!-- TemplateBeginEditable name="head" -->
<!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />{* 包含脚本文件 *}
{insert_scripts files='common.js'}
</head>
<body>
  <div id="wrap">
    <!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
    <!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem -->
    <div class="container">
      <div class="global_l">
        <!-- TemplateBeginEditable name="左边区域" -->
        <!-- #BeginLibraryItem "/library/cart.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/category_tree.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/goods_related.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/goods_fittings.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/goods_article.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/goods_attrlinked.lbi" --><!-- #EndLibraryItem -->
        <!-- #BeginLibraryItem "/library/history.lbi" --><!-- #EndLibraryItem -->
        <!-- TemplateEndEditable -->
      </div>
      <div class="global_r">
        <!-- TemplateBeginEditable name="右边通栏广告（宽750px）" -->
        <!-- TemplateEndEditable -->
        <div class="module" id="group_buy">
          <h1><span></span>{$lang.auction_goods}</h1>
          <div class="content" style="padding:8px;">
            <!-- {if $auction_list} 如果有拍卖活动 -->
            <!-- {foreach from=$auction_list item=auction} 循环拍卖活动开始 -->
            <ul style="display:block; overflow:hidden; zoom:1; padding:8px 0; border-bottom:1px #cccccc solid;">
              <li style="overflow: hidden; margin-right: 8px; width: 170px; text-align: center;">
                <a href="{$auction.url}"><img src="{$auction.goods_thumb}" border="0" alt="{$auction.goods_name|escape:html}" style="vertical-align: middle" /></a>
              </li>
              <li style="width: 546px; line-height: 23px;">
                {$lang.goods_name}：<a href="{$auction.url}">{$auction.goods_name|escape:html}</a><br />
                {$lang.act_status}：
                <!-- {if $auction.status_no eq 0} -->
                {$lang.au_pre_start}<br>
                <!-- {elseif $auction.status_no eq 1} -->
                {$lang.au_under_way_1}<br>
                <!-- {else} -->
                {$lang.au_finished}<br>
                <!-- {/if} -->
                {$lang.au_start_price}：{$auction.formated_start_price}<br>
                <!-- {if $auction.end_price gt 0} -->
                {$lang.au_end_price}：{$auction.formated_end_price}
                <!-- {/if} -->
              </li>
            </ul>
            <!--{/foreach}-->
            <!-- {else} -->
            <span style="margin:2px 10px; font-size:14px; line-height:36px;">{$lang.no_auction}</span>
            <!-- {/if} -->
          </div>
        </div>
			  <!-- #BeginLibraryItem "/library/pages.lbi" --><!-- #EndLibraryItem -->
      </div>
    </div>
		<!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem -->
	  <!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
  </div>
</body>
</html>