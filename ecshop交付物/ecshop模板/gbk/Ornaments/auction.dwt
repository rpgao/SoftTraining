<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gbk" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable --><!-- TemplateBeginEditable name="head" --><!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
{* 包含脚本文件 *}
{insert_scripts files='common.js,lefttime.js'}
<script type="text/javascript">
  {foreach from=$lang.js_languages item=item key=key}
    var {$key} = "{$item}";
  {/foreach}
</script>
<script type="text/javascript" src="js/action.js"></script>
</head>
<body>
<a name="top" id="top"></a>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/search_form.lbi" --><!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/ur_here.lbi" --><!-- #EndLibraryItem -->
<div class="block clearfix">
  <div id="left" class="fl">
	  <!-- TemplateBeginEditable name="左边区域" -->
		<!-- #BeginLibraryItem "/library/category_tree.lbi" --><!-- #EndLibraryItem -->
		<!-- #BeginLibraryItem "/library/promotion_info.lbi" --><!-- #EndLibraryItem -->
		<!-- #BeginLibraryItem "/library/history.lbi" --><!-- #EndLibraryItem -->
    <!-- TemplateEndEditable -->
	</div>
	<div id="right" class="fr">
	<!-- TemplateBeginEditable name="拍卖详情上可编辑区域" --> 
  <!-- TemplateEndEditable -->
	<h3 class="mod_title2 clearfix">
	 <div class="left"><p>{$lang.auction_goods_info}</p></div>
  </h3>
	<ul class="auctionList clearfix">
	 <li class="auctionImg">
	 <a href="{$auction_goods.url}"><img src="{$auction_goods.goods_thumb}" alt="{$auction_goods.goods_name|escape:html}"  class="inputborder"/></a>
	 </li>
	 <li>
	 <form name="theForm" action="auction.php" method="post">
      {$lang.goods_name}：<b class="f1">{$auction.goods_name|escape:html}</b><br>
      {$lang.au_current_price}：<font class="promote_price">{$auction.formated_current_price}</font><br>
      {$lang.act_time}：<font class="fred">{$auction.start_time} -- {$auction.end_time}</font><br>
      {$lang.au_start_price}：<font class="promote_price">{$auction.formated_start_price}</font><br>
      {$lang.au_amplitude}：<font class="promote_price">{$auction.formated_amplitude}</font><br>
      <!-- {if $auction.end_price gt 0} -->
      {$lang.au_end_price}：<font class="promote_price">{$auction.formated_end_price}</font><br>
      <!-- {/if} -->
      <!-- {if $auction.deposit gt 0} -->
      {$lang.au_deposit}：<font class="promote_price">{$auction.formated_deposit}</font><br>
      <!-- {/if} -->
      <!-- {if $auction.status_no eq 0} 未开始 -->
      <b class="f1 fred">{$lang.au_pre_start}</b>
      <!-- {elseif $auction.status_no eq 1} 进行中 -->
      <font class="fred">{$lang.au_under_way}<span id="leftTime">{$lang.please_waiting}</span></font><br />
      <b class="f1">{$lang.au_i_want_bid}：</b>
      <input name="price" type="text" class="inputborder" id="price" size="8" />
      <input name="bid" type="submit" class="bnt_number2 vertical" id="bid" value="{$lang.button_bid}" />
      <input name="act" type="hidden" value="bid" />
      <input name="id" type="hidden" value="{$auction.act_id}" /><br />
      <!-- {else} 已结束 -->
      <!-- {if $auction.is_winner} -->
      <b class="f1">{$lang.au_is_winner}</b><br />
      <input name="buy" type="submit" class="bnt_number6" value="{$lang.button_buy}" />
      <input name="act" type="hidden" value="buy" />
      <input name="id" type="hidden" value="{$auction.act_id}" />
      <!-- {else} -->
      <div class="tips">{$lang.au_finished}</div>
      <!-- {/if} -->
      <!-- {/if} -->
      </form>
	 </li>
  </ul>

	<div class="mod_title3">
		<div class="boxcontent">
			<div class="left fl">{$lang.activity_intro}</div>
			<div class="right fr">&nbsp;</div>
	  </div>
	  <div class="goods_filter">
		{$auction.act_desc|escape:html|nl2br}
	  </div>
	</div>
	<div class="mod_title3">
		<div class="boxcontent">
			<div class="left fl">{$lang.bid_record}</div>
			<div class="right fr">&nbsp;</div>
	  </div>
	  <div class="goods_filter">
		<table width="100%" border="0" cellpadding="5" cellspacing="1" bgcolor="#dddddd">
          <tr>
            <th align="center" bgcolor="#ffffff">{$lang.au_bid_user}</th>
            <th align="center" bgcolor="#ffffff">{$lang.au_bid_price}</th>
            <th align="center" bgcolor="#ffffff">{$lang.au_bid_time}</th>
            <th align="center" bgcolor="#ffffff">{$lang.au_bid_status}</th>
          </tr>
    <!-- {foreach from=$auction_log item=log name=fe_bid_log} -->
          <tr>
            <td align="center" bgcolor="#ffffff">{$log.user_name}</td>
            <td align="center" bgcolor="#ffffff">{$log.formated_bid_price}</td>
            <td align="center" bgcolor="#ffffff">{$log.bid_time}</td>
            <td align="center" bgcolor="#ffffff">{if $smarty.foreach.fe_bid_log.first} {$lang.au_bid_ok}{else}&nbsp;{/if}</td>
          </tr>
        <!-- {foreachelse} -->
        <tr>
          <td colspan="4" align="center" bgcolor="#ffffff" class="tips">{$lang.no_bid_log}</td>
        </tr>
        <!-- {/foreach} -->
     </table>
	  </div>
	</div>

	</div>
</div>
<!-- #BeginLibraryItem "/library/help.lbi" --><!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
</body>
<script type="text/javascript">
var gmt_end_time = "{$auction.gmt_end_time|default:0}";
{foreach from=$lang.goods_js item=item key=key}
var {$key} = "{$item}";
var now_time = {$now_time};
{/foreach}
<!-- {literal} -->

onload = function()
{
  try
  {
    onload_leftTime(now_time);
  }
  catch (e)
  {}
}
<!-- {/literal} -->
</script>
</html>
